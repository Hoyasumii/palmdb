{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": false
	},
	"include": ["src", "global.d.ts"]
}
